# RailServe Environment Configuration
# Copy this file to .env and fill in your values

# Required: Application secret key for sessions and CSRF protection
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=your_secret_key_here

# Required: PostgreSQL database connection URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://username:password@localhost:5432/railserve

# Optional: Application environment (development, production)
FLASK_ENV=production

# Optional: Number of Gunicorn workers (default: 4)
GUNICORN_WORKERS=4

# Optional: Enable debug mode (only for development)
FLASK_DEBUG=false