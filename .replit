modules = ["web", "python-3.11", "nodejs-20"]
[agent]
expertMode = true
integrations = ["python_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales", "openssl", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Railway App"

[[workflows.workflow]]
name = "Flask Railway App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "SESSION_SECRET=\"$(python -c 'import secrets; print(secrets.token_hex(32))')\" FLASK_ENV=production gunicorn --workers 2 --worker-class gthread --bind 0.0.0.0:5000 --timeout 120 --access-logfile - --error-logfile - main:app"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--workers", "2", "--worker-class", "gthread", "--bind", "0.0.0.0:5000", "--timeout", "120", "main:app"]
