modules = ["web", "nodejs-20", "python-3.11"]
[agent]
expertMode = true
integrations = ["python_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales", "openssl", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RailServe Frontend"

[[workflows.workflow]]
name = "RailServe Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv run gunicorn --bind 0.0.0.0:5000 --reuse-port --workers 2 --reload main:app"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

